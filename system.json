{
  "id": "pars-crucis",
  "title": "Pars Crucis",
  "description": "Adaptação do sistema Pars Crucis",
  "version": "2.12.0",
  "compatibility": {
    "minimum": 13,
    "verified": 13
  },
  "authors": [
    {
      "name": "Ismael C.",
      "discord": "krosbelt"
    },
    {
      "name": "Guilherme R."
    }
  ],
  "esmodules": ["parscrucis.mjs"],
  "styles": [
    "styles/config.css",
    "styles/styles.css",
    "styles/actor.css",
    "styles/items.css",
    "styles/persona-config.css",
    "styles/chat.css"
  ],
  "packs": [
    {
      "name": "personas",
      "label": "PC.PACKS.ACTORS",
      "type": "Actor",
      "banner": "systems/pars-crucis/assets/banners/personas.svg"
    },
    {
      "name": "abilities",
      "label": "PC.PACKS.ABILITIES",
      "type": "Item",
      "banner": "systems/pars-crucis/assets/banners/abilities.svg"
    },
    {
      "name": "gear",
      "label": "PC.PACKS.GEAR",
      "type": "Item",
      "banner": "systems/pars-crucis/assets/banners/gear.svg"
    },
    {
      "name": "passives",
      "label": "PC.PACKS.PASSIVES",
      "type": "Item",
      "banner": "systems/pars-crucis/assets/banners/passives.svg"
    },
    {
      "name": "weapons",
      "label": "PC.PACKS.WEAPONS",
      "type": "Item",
      "banner": "systems/pars-crucis/assets/banners/weapons.svg"
    }
  ],

  "packFolders": [
    {
      "name": "Pars Crucis",
      "color": "#8B4513",
      "packs": ["personas", "abilities", "gear", "passives", "weapons"]
    }
  ],

  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "documentTypes": {
    "Actor": {
      "persona": {
        "htmlFields": ["info.background"]
      },
      "pdm": {
        "htmlFields": ["info.background"]
      }
    },
    "Item": {
      "ability": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      },
      "gear": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      },
      "passive": {
        "htmlFields": ["description.description"]
      },
      "weapon": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      }
    }
  },
  "grid": {
    "distance": 1,
    "units": "m"
  },
  "manifest": "",
  "download": ""
}
