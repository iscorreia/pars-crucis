{
  "id": "pars-crucis",
  "title": "Pars Crucis",
  "description": "Adaptação do sistema Pars Crucis",
  "version": "2.12.0",
  "compatibility": {
    "minimum": 13,
    "verified": 13
  },
  "authors": [
    {
      "name": "Ismael C.",
      "discord": "krosbelt"
    },
    {
      "name": "Guilherme R."
    }
  ],
  "esmodules": ["parscrucis.mjs"],
  "styles": [
    "styles/config.css",
    "styles/actor.css",
    "styles/apps.css",
    "styles/chat.css",
    "styles/items.css",
    "styles/styles.css"
  ],
  "packs": [
    {
      "name": "personas",
      "label": "PC.packs.actors",
      "type": "Actor"
    },
    {
      "name": "abilities",
      "label": "PC.packs.abilities",
      "type": "Item"
    },
    {
      "name": "gear",
      "label": "PC.packs.gear",
      "type": "Item"
    },
    {
      "name": "passives",
      "label": "PC.packs.passives",
      "type": "Item"
    },
    {
      "name": "weapons",
      "label": "PC.packs.weapons",
      "type": "Item"
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/pt-BR.json"
    },
    {
      "lang": "pt-BR",
      "name": "Português Brasileiro",
      "path": "lang/pt-BR.json"
    }
  ],
  "documentTypes": {
    "Actor": {
      "persona": {
        "htmlFields": ["info.background"]
      },
      "pdm": {
        "htmlFields": ["info.background"]
      }
    },
    "Item": {
      "ability": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      },
      "ammo": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      },
      "gear": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      },
      "passive": {
        "htmlFields": ["description.description"]
      },
      "weapon": {
        "filePathFields": {
          "actions.*.img": ["IMAGE"]
        },
        "htmlFields": ["description.description"]
      }
    }
  },
  "grid": {
    "distance": 1,
    "units": "m"
  },
  "manifest": "",
  "download": ""
}
