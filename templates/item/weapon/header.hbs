{{! Weapon sheet header }}

<header class="sheet-header item-header weapon-header">
  <img
    class="item-img"
    src="{{item.img}}"
    data-edit="img"
    data-action="editImage"
    width="89"
    height="89"
  />
  <div class="item-header-right">
    <div class="item-name-line">
      <h1 class="name item-name">
        {{item.name}}
      </h1>
      <div class="experience">
        {{#if
          (or
            (eq system.cost.currency "silver")
            (eq system.cost.currency "copper")
          )
        }}
          {{#if (eq system.cost.currency "silver")}}
            <div class="cost-line silver">
              <div class="item-cost">{{system.cost.price}}</div>
              <div class="currency">
                {{localize (concat "PC.currency." system.cost.currency ".abv")}}
              </div>
            </div>
          {{else}}
            <div class="cost-line copper">
              <div class="item-cost">{{system.cost.price}}</div>
              <div class="currency">
                {{localize (concat "PC.currency." system.cost.currency ".abv")}}
              </div>
            </div>
          {{/if}}
        {{else}}
          <div class="cost-line">
            <div class="costless">
              {{localize (concat "PC.currency." system.cost.currency ".abv")}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
    <div class="item-info">
      {{localize (concat "PC.weapon.subtypes." system.info.subtype ".label")}}
      ·
      {{localize
        (concat
          "PC.weapon.subtypes." system.info.subtype ".groups." system.info.group
        )
      }}
      {{#if system.info.subgroup}}
        ·
        {{system.info.subgroup}}
      {{/if}}
    </div>

    <div class="item-sheet-keywords">
      {{#each system.keywords as |value key|}}
        <div class="pc-keyword">{{localize (concat "PC.keyword." key)}}{{#if
            value
          }} ({{value}}){{/if}}</div>
      {{/each}}
    </div>
  </div>
</header>