{{! Ammunition sheet header }}

<header class="sheet-header item-header">
  <img
    class="item-img"
    src="{{item.img}}"
    data-edit="img"
    data-action="editImage"
    width="89"
    height="89"
  />
  <div class="item-header-right">
    {{> systems/pars-crucis/templates/item/partials/name-cost.hbs}}
    <div class="item-info">
      {{localize "PC.ammo.label"}}
      Â·
      {{localize (concat "PC.ammo.group." system.info.group)}}
    </div>

    <div class="item-sheet-keywords">
      {{#each system.keywords as |value key|}}
        <div class="pc-keyword">{{localize (concat "PC.keyword." key)}}{{#if
            value
          }} ({{value}}){{/if}}</div>
      {{/each}}
    </div>
  </div>
</header>