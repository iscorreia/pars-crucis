<div class="item-header">
  <img
    class="item-img"
    src="{{item.img}}"
    data-edit="img"
    title="{{item.name}}"
  />
  <div class="item-header-right">
    <h2 class="item-name">
      <input
        name="name"
        type="text"
        value="{{item.name}}"
        placeholder="Nome do Item"
      />
    </h2>
  </div>
</div>


