{{! Ability Details and Config tab }}

<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="config">
  <div class="flexcol">
    <input
      name="name"
      type="String"
      value="{{item.name}}"
      placeholder="Nameless Ability"
    />
    <select name="system.info.subtype">
      {{selectOptions
        config.ability.subtypes
        selected=system.info.subtype
        localize=true
      }}
    </select>
    <select name="system.info.art">
      {{selectOptions
        config.ability.arts
        selected=system.info.art
        localize=true
      }}
    </select>
    {{#with (lookup config.ability.arts system.info.art) as |art|}}
      {{#if art.categories}}
        <select name="system.info.category">
          {{selectOptions
            (lookup (lookup ../config.ability.arts ../system.info.art) "categories")
            selected=../system.info.category
            localize=true
          }}
        </select>
      {{/if}}
    {{/with}}
    <div>
      <h4>{{localize "PC.keywords"}}</h4>
      <a data-action="addKeyword"><i 
        class="fa-regular fa-plus"
      ></i></a>
      {{#each system.keywords as |keyword obj|}}
        <div class="flexrow">
          <div>
            {{localize (concat "PC.keyword." obj)}}{{#if keyword}}
              ({{keyword}}){{/if}}
          </div>
          <a data-action="cutKeyword" data-keyword="{{@key}}">
            <i class="fa-regular fa-trash-can"></i></a>
        </div>
      {{/each}}
    </div>
    <div>
      {{localize "PC.skill"}}
      <select name="system.details.coreSkill">
        {{selectOptions
          config.skillsNone
          selected=system.details.coreSkill
          localize=true
        }}
      </select>
    </div>
    <div>
      {{localize "PC.level.abv"}}
      <input 
        name="system.details.coreLevel"
        value="{{system.details.coreLevel}}"
        type="Number"
        data-dtype="Number"
      />
    </div>
  </div>
</section>