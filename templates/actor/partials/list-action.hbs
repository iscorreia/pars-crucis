<li class="list-action">
  {{#if this.ready}}
    <span 
      class="inline-head
      {{#if (eq this.type "test")}}test{{/if}}
      {{#if (eq this.type "use")}}use{{/if}}"
      data-action="callAction"
      data-ac-id="{{@key}}"
      data-ac-type="{{this.type}}"
      data-item-id="{{itemId}}"
    >
      <img
        class="inline-icon"
        src="{{this.img}}"
        width="16"
        height="16"
      />
      <span class="inline-action-name">{{this.name}}</span>
    </span>
  {{else}}
    <span
      class="inline-head disabled-action
      {{#if (eq this.type "test")}}test{{/if}}
      {{#if (eq this.type "use")}}use{{/if}}"
    >
      <img class="inline-icon" src="{{this.img}}" width="16" height="16" />
      <span class="inline-action-name">{{this.name}}</span>
    </span>
  {{/if}}

  {{#if (and this.skill (not this.subtype))}}
    {{log this.skills}}
    <span class="inline-value inline-skill">
      ({{localize (concat "PC.skills." this.skill)}}{{#if (gt (lookup this.skills this.skill) 0)}}+{{/if}}{{#if (not (eq (lookup this.skills this.skill) 0))}}{{lookup this.skills this.skill}}{{/if}})
    </span>
  {{/if}}
  {{#if (and (not this.skill) this.subtype)}}
    <span class="inline-value inline-skill">
      ({{localize (concat "PC.action.types.attack.subtype." this.subtype)}})
    </span>
  {{/if}}
  {{#if (and this.skill this.subtype)}}
    <span class="inline-value inline-skill">
      ({{localize (concat "PC.skills." this.skill)}}{{#if (gt (lookup this.skills this.skill) 0)}}+{{/if}}{{#if (not (eq (lookup this.skills this.skill) 0))}}{{lookup this.skills this.skill}}{{/if}} | {{localize (concat "PC.action.types.attack.subtype." this.subtype)}})
    </span>
  {{/if}}

  {{#if (not (isEmpty this.keywords))}}
    <span class="item-keywords">
      {{#each this.keywords}}
        {{> systems/pars-crucis/templates/partials/pc-keyword.hbs}}
      {{/each}}
    </span>
  {{/if}}

  {{#if this.usage}}
    <span class="inline-label">{{localize "PC.action.types.use.label"}}</span>
    <span class="inline-value">{{this.usage}}</span>
  {{/if}}
  {{#if this.limit}}
    <span class="inline-label">{{localize "PC.limit"}}</span>
    <span class="inline-value">{{this.limit}}</span>
  {{/if}}
  {{#if this.effort}}
    <span class="inline-label">{{localize "PC.effort.abv"}}</span>
    <span class="inline-value">{{this.effort}}</span>
  {{/if}}
  {{#if this.prepTime}}
    <span class="inline-label">{{localize "PC.prepTime.abv"}}</span>
    <span class="inline-value">{{this.prepTime}}</span>
  {{/if}}
  {{#if this.difficulty}}
    <span class="inline-label">{{localize "PC.difficulty.label"}}</span>
    <span class="inline-value">{{this.difficulty}}</span>
  {{/if}}
  {{#if this.range}}
    <span class="inline-label">{{localize "PC.range.label"}}</span>
    <span class="inline-value">{{this.range}}</span>
  {{/if}}
  {{#if this.area}}
    <span class="inline-label">{{localize "PC.area.label"}}</span>
    <span class="inline-value">{{this.area}}</span>
  {{/if}}
  {{#if this.damaging}}
    <span class="inline-label">{{localize "PC.damage"}}</span>
    <span class="inline-value">{{this.damage.dmgTxt}}</span>
  {{/if}}
  {{#if this.effect}}
    <span class="inline-label">{{localize "PC.effect"}}</span>
    <span class="inline-value">{{this.effect}}</span>
  {{/if}}
  {{#if this.duration}}
    <span class="inline-label">{{localize "PC.duration.label"}}</span>
    <span class="inline-value">{{this.duration}}</span>
  {{/if}}
</li>