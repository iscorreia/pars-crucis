{{! Attributes central block }}

<section class="attributes flexrow">
  {{#each config.attribute as |attribute obj|}}
    {{#with (lookup @root.actor.system.attributes obj) as |att|}}
      <div>
        <h3 class="att-name">
          {{#if att.disabled}}{{else}}
            <a data-action="clickAttribute" data-attribute="{{@key}}">
              {{localize attribute.abv}}
            </a>
          {{/if}}
        </h3>
        <div class="att-field flexrow">
          <input
            class="att-value"
            type="Number"
            name="system.attributes.{{@key}}.override"
            value="{{att.override}}"
            placeholder="{{att.base}}"
            data-dtype="Number"
          />
          <input
            class="att-modifier"
            type="String"
            name="system.attributes.{{@key}}.mod"
            value="{{numberFormat att.mod sign=true}}"
            data-dtype="Number"
          />
        </div>
      </div>
    {{/with}}
  {{/each}}
</section>
