  <div class="flexrow">
    {{localize "PC.subattribute.pv.label"}}
    <input
      class="subatt-value"
      type="Number"
      name="system.subattributes.pv.value"
      value="{{system.subattributes.pv.value}}"
      data-dtype="Number"
    />/<input
