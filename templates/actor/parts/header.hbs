{{! Sheet header }}

<header class="persona-sheet-header">
  <img
    class="profile-img"
    src="{{actor.img}}"
    data-action="editImage"
    data-edit="img"
    height="160"
    width="160"
  />
  <div class="header-center-block">
    <h1 class="name actor-name">{{actor.name}}</h1>
    <div class="actor-info flexrow">
     <span>{{localize (concat "PC.origins." system.info.origin)}} · {{localize (concat "PC.cultures." system.info.culture)}} {{system.info.subculture}} · {{localize (concat "PC.personas." system.info.persona)}}</span>
    </div>
    <div>
      {{> systems/pars-crucis/templates/actor/partials/attributes.hbs}}
    </div>
  </div>
  <div class="header-right-block">
    {{> systems/pars-crucis/templates/actor/partials/experience.hbs}}
    {{> systems/pars-crucis/templates/actor/partials/minors.hbs}}
    {{> systems/pars-crucis/templates/actor/partials/mitigation.hbs}}
  </div>
</header>